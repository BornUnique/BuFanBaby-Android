<?xml version="1.0" encoding="utf-8"?>
<com.bufanbaby.android.ui.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="?android:attr/listChoiceIndicatorMultiple"
        android:duplicateParentState="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTagDesc" />

    </LinearLayout>


</com.bufanbaby.android.ui.CheckableLinearLayout>
